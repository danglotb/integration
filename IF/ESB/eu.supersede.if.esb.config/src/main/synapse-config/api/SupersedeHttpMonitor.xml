<?xml version="1.0" encoding="UTF-8"?>
<api context="/HttpMonitoring" name="SupersedeHttpMonitor" xmlns="http://ws.apache.org/ns/synapse">
  <resource methods="POST" protocol="http" uri-template="/configuration">
    <inSequence>
      <log level="full">
        <property name="Http Monitor" value="Insert a monitor configuration message forwarded to Http Monitor endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/HttpMonitorEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
  <resource methods="PUT" protocol="http" uri-template="/configuration/{id}">
    <inSequence>
      <log level="full">
        <property name="Http Monitor" value="Update a monitor configuration message forwarded to Http Monitor endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/HttpMonitorEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
  <resource methods="DELETE" protocol="http" uri-template="/configuration/{id}">
    <inSequence>
      <log level="full">
        <property name="Http Monitor" value="Delete a monitor configuration message forwarded to Http Monitor endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/HttpMonitorEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
</api>
