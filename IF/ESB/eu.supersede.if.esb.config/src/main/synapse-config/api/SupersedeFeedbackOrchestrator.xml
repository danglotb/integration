<?xml version="1.0" encoding="UTF-8"?>
<api context="/feedback_orchestrator"
  name="SupersedeFeedbackOrchestrator" xmlns="http://ws.apache.org/ns/synapse">
  <resource methods="GET" protocol="http" uri-template="/en/applications">
    <inSequence>
      <log level="full">
        <property name="Feedback Orchestrator" value="Get all applications message forwarded to Feedback Orchestrator endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/FeedbackOrchestratorEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
  <resource methods="GET" protocol="http" uri-template="/en/applications/{app_id}">
    <inSequence>
      <log level="full">
        <property name="Feedback Orchestrator" value="Get application by Id message forwarded to Feedback Orchestrator endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/FeedbackOrchestratorEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
  <resource methods="PUT" protocol="http" uri-template="/en/applications">
    <inSequence>
      <log level="full">
        <property name="Feedback Orchestrator" value="Update application message forwarded to Feedback Orchestrator endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/FeedbackOrchestratorEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
  <resource methods="POST" protocol="http" uri-template="/en/applications">
    <inSequence>
      <log level="full">
        <property name="Feedback Orchestrator" value="Insert application message forwarded to Feedback Orchestrator endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/FeedbackOrchestratorEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
</api>
