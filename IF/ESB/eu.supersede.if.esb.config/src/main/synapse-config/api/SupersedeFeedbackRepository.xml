<?xml version="1.0" encoding="UTF-8"?>
<api context="/feedback_repository" name="SupersedeFeedbackRepository" xmlns="http://ws.apache.org/ns/synapse">
  <resource methods="GET" protocol="http" uri-template="/en/feedbacks">
    <inSequence>
      <log level="full">
        <property name="Feedback Repository" value="Get all feedbacks message forwarded to Feedback Repository endpoint"/>
      </log>
      <property name="endpoint" scope="default" type="STRING" value="gov:/repository/endpoint/FeedbackRepositoryEndpoint.xml"/>
      <send>
        <endpoint key-expression="$ctx:endpoint"/>
      </send>
    </inSequence>
    <outSequence>
      <send/>
    </outSequence>
    <faultSequence>
      <send/>
    </faultSequence>
  </resource>
