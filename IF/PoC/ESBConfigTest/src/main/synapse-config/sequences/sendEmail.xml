<?xml version="1.0" encoding="UTF-8"?>
<sequence name="sendEmail" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
  <property name="messageType" scope="axis2" type="STRING" value="text/html"/>
  <property name="ContentType" scope="axis2" type="STRING" value="text/html"/>
  <property expression="$ctx:email_subject" name="Subject"
    scope="transport" type="STRING"/>
  <property expression="$ctx:email_to" name="To" scope="transport" type="STRING"/>
  <property name="OUT_ONLY" scope="default" type="STRING" value="true"/>
  <payloadFactory media-type="xml">
    <format>
      <ns:text xmlns:ns="http://ws.apache.org/commons/ns/payload">$1</ns:text>
    </format>
    <args>
      <arg evaluator="xml" expression="$ctx:email_body"/>
    </args>
  </payloadFactory>
  <log level="full"/>
  <send>
    <endpoint>
      <address trace="disable" uri="mailto:"/>
    </endpoint>
  </send>
</sequence>
